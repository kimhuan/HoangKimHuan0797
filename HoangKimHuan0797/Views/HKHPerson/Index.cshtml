@model IEnumerable<HoangKimHuan0797.Models.HKHPerson>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonPhone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PersonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonPhone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PersonID">Chỉnh sửa</a> |
                <a asp-action="Details" asp-route-id="@item.PersonID">Thông tin</a> |
                <a asp-action="Delete" asp-route-id="@item.PersonID">Xoá bỏ</a>
            </td>
        </tr>
}
    </tbody>
</table>
